{
    "name": "keboola/db-writer-snowflake",
    "license": "MIT",
    "type": "project",
    "description": "Keboola Snowflake DB Writer",
    "keywords": ["keboola", "snowflake", "db", "writer"],
    "require": {
        "php": ">=7.1",
        "keboola/db-writer-common": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.3",
        "squizlabs/php_codesniffer": "^3.2",
        "codeclimate/php-test-reporter": "^0.3",
        "keboola/storage-api-client": "^4.14",
        "keboola/coding-standard": "^8.0",
        "phpstan/phpstan-shim": "^0.11.16"
    },
    "config": {
        "process-timeout": 1800
    },
    "scripts": {
        "tests": "phpunit",
        "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
        "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
        "phpstan": "phpstan analyse ./src ./tests --level=max --no-progress -c phpstan.neon",
        "codeclimate": "test-reporter",
        "build": [
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-all --strict",
            "@build"
        ],
        "ci-and-codeclimate": [
            "@ci",
            "@codeclimate"
        ]
    },
    "autoload": {
        "psr-4": {
            "Keboola\\": "src/Keboola/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\DbWriter\\Snowflake\\Tests\\": "tests/phpunit"
        }
    }
}
